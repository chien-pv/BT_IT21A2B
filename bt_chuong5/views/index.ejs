<!DOCTYPE html>
<html lang="en">
<%- include("_layouts/_header") -%>

    <body>
        <div class="container">
            <div class="table-responsive">
                <div class="table-wrapper">
                    <div class="table-title">
                        <div class="row">
                            <div class="col-sm-8">
                                <h2>
                                    <%= title %>
                                </h2>
                            </div>
                            <div class="col-sm-4">
                                <button type="button" class="btn btn-info add-new"><i class="fa fa-plus"></i> Add
                                    New</button>
                            </div>
                        </div>
                    </div>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width:5%">STT</th>
                                <th style="width:20%">Họ và tên</th>
                                <th style="width:15%">Hình ảnh</th>
                                <th>Giới tính</th>
                                <th style="width:15%">Ngày sinh</th>
                                <th>Địa chỉ</th>
                                <th>Số điện thoại</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach((item, index)=>{ %>
                                <tr>
                                    <td class="text-center">
                                        <strong>
                                            <%= index+1 %>
                                        </strong>
                                    </td>
                                    <td>
                                        <%=item.firstName %>
                                            <%= item.lastName%>
                                    </td>
                                    <td><a href="<%=item.slug%> "> <img src="<%= item.image  %> " alt=""></a> </td>
                                    <td>
                                        <% let gerder=""
                                            let slug="" 
                                            if(item.gender==1){
                                                gender="Nam"
                                                slug="nam"
                                            }else{
                                                gender="Nữ"
                                                slug="nu"
                                            }
                                        %> 
                                        <a href="gender?type=<%= slug %>"><%= gender %></a>
                                    </td>
                                    <td>

                                        <%= moment(item.birthday).format("DD-MM-YYYY") %>
                                    </td>
                                    <td>
                                        <%= item.address %>
                                    </td>
                                    <td>
                                        <%= item.phone %>
                                    </td>
                                    <td>
                                        <a class="add" title="Add" data-toggle="tooltip"><i
                                                class="material-icons">&#xE03B;</i></a>
                                        <a class="edit" title="Edit" data-toggle="tooltip"><i
                                                class="material-icons">&#xE254;</i></a>
                                        <a class="delete" title="Delete" data-toggle="tooltip"><i
                                                class="material-icons">&#xE872;</i></a>
                                    </td>
                                </tr>
                                <% }) %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>

</html>